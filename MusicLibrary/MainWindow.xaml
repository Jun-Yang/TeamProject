<Window x:Class="MusicLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicLibrary"
        mc:Ignorable="d"
        Title="MainWindow" Height="419.576" Width="596.829" Loaded="Window_Loaded" Icon="@..\..\Image\folder.png">
    <Window.Resources>
        <local:ImageToHeaderConverter x:Key="img"/>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="25" Margin="0,0,0.4,0">
            <MenuItem Header="_File">
                <MenuItem Name="MiOpen" Header="_Open..." Click="MiOpen_Click"/>
                <MenuItem Name="MiSave" Header="_Save" Click="MiSave_Click"/>
                <MenuItem Name="MiSaveAs" Header="Save _as..." Click="MiSaveAs_Click"/>
                <Separator />
                <MenuItem Name="MiExit" Header="E_xit" Click="MiExit_Click"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="lblCursorPosition" />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2" Margin="0.2,0,-0.4,0" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="381">
                <TextBlock Name ="TbFilePath" />
            </StatusBarItem>
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4">
                <TextBlock Name ="TbFileStatus" />
            </StatusBarItem>
        </StatusBar>
        <Grid Margin="10,0,-111.6,-0.2" HorizontalAlignment="Left" Width="580" Height="313" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="18*"/>
                <ColumnDefinition Width="127*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="154*"/>
                <RowDefinition/>
                <RowDefinition Height="158*"/>
            </Grid.RowDefinitions>
            <TreeView Name="lvDirectory" MouseDoubleClick="folders_MouseDoubleClick" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="-15,-30,448,-0.2" HorizontalAlignment="Right" Width="147">
                <TreeView.Resources>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="25" Height="15" Source="{Binding Path=Tag,RelativeSource={RelativeSource AncestorLevel=1,AncestorType=TreeViewItem,Mode=FindAncestor},Converter={StaticResource img}}"></Image>
                                        <TextBlock FontWeight="Heavy" Text="{Binding}"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TreeView.Resources>
            </TreeView>
            <ListView x:Name="lvLibrary" Margin="60,-30,0,-0.2" HorizontalAlignment="Left" Width="250" Grid.RowSpan="3" Grid.Column="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <ListView x:Name="lvPlay" Margin="310,-30,0,-0.2" HorizontalAlignment="Left" Width="198" Grid.RowSpan="3" Grid.Column="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </DockPanel>
</Window>
