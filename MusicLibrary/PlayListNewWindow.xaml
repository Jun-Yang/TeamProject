<Window x:Class="MusicLibrary.PlayListNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicLibrary"
        mc:Ignorable="d"
        Title="PlayListNewWindow" Height="339.959" Width="338.436" MinWidth="280" MinHeight="190" Icon="@..\..\Image\player.png" WindowStartupLocation="Manual" ResizeMode="NoResize">
    <Grid Background="#DCDCDC" HorizontalAlignment="Left" Width="336" Margin="0,0,-4,-3.8">
        <Grid.RowDefinitions  >
            <RowDefinition Height="Auto" MinHeight="40" />
            <RowDefinition Height="Auto" MinHeight="40" />
            <RowDefinition Height="Auto" MinHeight="40" />
            <RowDefinition Height="Auto" MinHeight="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition />
            <ColumnDefinition Width="244" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Playlist Name"  Height="23" Width="90" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,1,0" />
        <Label Grid.Row="1" Grid.Column="0" Content="Song Title" HorizontalAlignment="Right" Width="90" Margin="0,10.2,1,17" Grid.RowSpan="2" />
        <Label Grid.Row="2" Grid.Column="0" Content="Artist"  Height="28" HorizontalAlignment="Right" Width="90" Margin="0,10.8,0,98.8" Grid.RowSpan="2" />
        <Label Grid.Row="3" Grid.Column="0" Content="Description" Height="60" HorizontalAlignment="left" VerticalAlignment="Top" Width="90" Margin="0,19.8,0,0"/>

        <TextBox Grid.Row ="0" x:Name ="tbPlayListName" Height="28" HorizontalAlignment="Left" Width="200" Grid.Column="1" Margin="0,5,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <TextBox Grid.Row ="1" x:Name ="tbSongTitle" IsReadOnly="True" Height="28" HorizontalAlignment="Left" Width="200" Grid.Column="1" Margin="0,9.2,11,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <TextBox Grid.Row ="2" x:Name ="tbSongArtist" IsReadOnly="True" Height="28"  HorizontalAlignment="Left" Width="200" Grid.Column="1" Margin="0,11,0,0" VerticalAlignment="Top" Grid.RowSpan="2" />
        <TextBox Grid.Row ="3" x:Name ="tbDescription" Height="100"  HorizontalAlignment="Left"  VerticalAlignment="Top" Width="200" Grid.Column="1" Margin="0,19.8,0,-13.4" Grid.RowSpan="3" />
        <Button Grid.Row ="5" Content="Save" Click="btSave_Click" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="60" Height="30" Margin="0,0,184,-58.2" Grid.Column="1"  />
        <Button Grid.Row ="5" Grid.Column="1" Content="Cancel" Click="btCancel_Click"  Height="30" Width="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,70,-58.2"/>
    </Grid>
</Window>
